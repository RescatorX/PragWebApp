@{
    Layout = "~/Views/Shared/_LayoutCalendar.cshtml";
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
<script src="~/js/angular-1.5.3.min.js" type="text/javascript"></script>
<script src="~/js/angular-messages.js" type="text/javascript"></script>
<script src="~/js/common.js" type="text/javascript"></script>
<script src="~/js/calendar-page.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-strap/2.1.2/angular-strap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-strap/2.1.5/angular-strap.tpl.min.js"></script>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" type="text/css" rel="stylesheet">
<link href="~/css/calendar-page.css" type="text/css" rel="stylesheet">

<div id="calendar-app-div" ng-app="CalendarPage">

    <div id="controller-div" ng-controller="CalendarCtrl" style="height: 800px; overflow-y: auto; padding: 0 15px;">

        <div class="row title-row">
            <div class="col-3"></div>
            <div class="col-3"><span>Uživatel: {{initData.user}}</span></div>
            <div class="col-2"></div>
            <div class="col-4">
                <table>
                    <tr>
                        <td ng-if="interval == 'D'" ng-click="intervalDay()" class="bordered clickable interval-div-selected"><span>den</span></td>
                        <td ng-if="interval != 'D'" ng-click="intervalDay()" class="bordered clickable interval-div"><span>den</span></td>
                        <td ng-if="interval == 'W'" ng-click="intervalWeek()" class="bordered clickable interval-div-selected"><span>týden</span></td>
                        <td ng-if="interval != 'W'" ng-click="intervalWeek()" class="bordered clickable interval-div"><span>týden</span></td>
                        <td ng-if="interval == 'M'" ng-click="intervalMonth()" class="bordered clickable interval-div-selected"><span>měsíc</span></td>
                        <td ng-if="interval != 'M'" ng-click="intervalMonth()" class="bordered clickable interval-div"><span>měsíc</span></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row" style="margin-bottom: 15px;">
            <div class="col-3">
                <div class="row">
                    <div class="col-12 calendar-selector">
                        <div class="row" style="margin-bottom: 1px;">
                            <div class="bordered clickable month-change" ng-click="prevMonth()"><span>&lt;</span></div>
                            <div class="bordered clickable month-current">{{initData.monthName}}  {{initData.year}}</div>
                            <div class="bordered clickable month-change" ng-click="nextMonth()"><span>&gt;</span></div>
                        </div>
                        <div class="row" style="margin-bottom: 1px;">
                            <div class="bordered calendar-day-title">PO</div>
                            <div class="bordered calendar-day-title">ÚT</div>
                            <div class="bordered calendar-day-title">ST</div>
                            <div class="bordered calendar-day-title">ČT</div>
                            <div class="bordered calendar-day-title">PÁ</div>
                            <div class="bordered calendar-day-title">SO</div>
                            <div class="bordered calendar-day-title">NE</div>
                        </div>
                        <div ng-repeat="row in selectorRows" class="row">
                            <div ng-repeat="day in row.days" ng-click="selectDay(day)" class="clickable calendar-day" ng-class="{inmonth: (day.isInMonth == true), bordered: (day.isCurrentDay != true), today: (day.isCurrentDay == true), selectedday: (day.isSelected == true)}">
                                <span>{{day.day}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div ng-if="eventMode == ''" class="clickable calendar-add-event calendar-button" style="margin: 20px 20px 0 0;" ng-click="addEvent()">
                        <i class="fa fa-plus" style="color: green;"></i><span>Přidat novou událost</span>
                    </div>
                    <div ng-if="(eventMode == 'C') || (eventMode == 'E') || (eventMode == 'S')" class="clickable calendar-hide-event calendar-button" style="margin: 20px 20px 0 0;" ng-click="hideEvent()">
                        <i class="fa fa-hide" style="color: green;"></i><span>Storno</span>
                    </div>
                    <div ng-if="(eventMode == 'C') || (eventMode == 'E')" class="clickable calendar-save-event calendar-button" style="margin: 20px 20px 0 0;" ng-click="saveEvent()">
                        <i class="fa fa-save" style="color: green;"></i><span>Uložit</span>
                    </div>
                    <div ng-if="(eventMode == 'S')" class="clickable calendar-save-event calendar-button" style="margin: 20px 20px 0 0;" ng-click="editEvent()">
                        <i class="fa fa-save" style="color: green;"></i><span>Upravit</span>
                    </div>
                </div>
                <div ng-if="(eventMode == 'C') || (eventMode == 'E') || (eventMode == 'S')" class="row" style="margin: 20px -25px 0 -25px;">
                    <form asp-action="_EventEditPartial" style="display: contents; margin-bottom: 30px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-12">
                            <label for="title" class="control-label" title="Název">Název</label>
                            <input ng-if="(eventMode != 'S')" type="text" name="title" id="title" class="form-control tiny-form-control" ng-model='currentEvent.title'>
                            <input ng-if="(eventMode == 'S')" type="text" name="title" id="title" class="form-control tiny-form-control" ng-model='currentEvent.title' readonly>
                        </div>
                        <div ng-if="((initData.stylists != null) && (initData.stylists.length > 0))" class="form-group col-12">
                            <label for="owner" class="control-label">Vlastník</label>
                            <select ng-if="(eventMode != 'S')" name="owner" id="owner" class="form-control tiny-form-control" style="padding-top: 2px;" ng-model='currentEvent.owner' ng-options='stylist.name for stylist in initData.stylists track by stylist.id' ng-change="ownerChanged()"></select>
                            <input ng-if="(eventMode == 'S')" type="text" name="owner" id="owner" class="form-control tiny-form-control" ng-model='currentEvent.owner.name' readonly>
                        </div>
                        <div ng-if="((initData.eventTypes != null) && (initData.eventTypes.length > 0))" class="form-group col-12">
                            <label for="eventType" class="control-label">Typ</label>
                            <select ng-if="(eventMode != 'S')" name="eventType" id="eventType" class="form-control tiny-form-control" style="padding-top: 2px;" ng-model='currentEvent.eventType' ng-options='eventType.name for eventType in initData.eventTypes track by eventType.id' ng-change="eventTypeChanged()"></select>
                            <input ng-if="(eventMode == 'S')" type="text" name="eventType" id="eventType" class="form-control tiny-form-control" ng-model='currentEvent.eventType.name' readonly>
                        </div>
                        <div class="form-group col-6">
                            <label for="eventStart" class="control-label">Začátek</label>
                            <input ng-if="(eventMode != 'S')" name="eventStart" id="eventStart" class="form-control tiny-form-control" ng-model='currentEvent.start' size="8" bs-timepicker data-length="7" data-placement="bottom" data-use-native="true" data-time-format="HH:mm" data-min-time="08:00" data-max-time="18:00" data-autoclose="1" data-hour-step="1" data-minute-step="15" data-arrow-behavior="pager" type="text">
                            <input ng-if="(eventMode == 'S')" type="text" name="eventStart" id="eventStart" class="form-control tiny-form-control" ng-model='currentEvent.start' readonly>
                        </div>
                        <div class="form-group col-6">
                            <label for="eventEnd" class="control-label">Konec</label>
                            <input ng-if="(eventMode != 'S')" name="eventEnd" id="eventEnd" class="form-control tiny-form-control" ng-model='currentEvent.end' size="8" bs-timepicker data-length="7" data-placement="bottom" data-use-native="true" data-time-format="HH:mm" data-min-time="08:00" data-max-time="18:00" data-autoclose="1" data-hour-step="1" data-minute-step="15" data-arrow-behavior="pager" type="text">
                            <input ng-if="(eventMode == 'S')" type="text" name="eventEnd" id="eventEnd" class="form-control tiny-form-control" ng-model='currentEvent.end' readonly>
                        </div>
                        <div class="form-group form-check col-12">
                            <label for="allDay" class="control-label" style="width: 150px; margin-bottom: 0px;" title="Celodenní">Celodenní akce</label>
                            <input ng-if="(eventMode != 'S')" type='checkbox' name="allDay" id="allDay" class="form-control tiny-form-control" ng-model="currentEvent.allDay" title="Celodenní" style="width: 20px;" />
                            <input ng-if="(eventMode == 'S')" type="text" name="allDay" id="allDay" class="form-control tiny-form-control" ng-model='currentEvent.allDay' readonly>
                        </div>
                        <div ng-if="((initData.customers != null) && (initData.customers.length > 0))" class="form-group col-12">
                            <label for="customer" class="control-label">Zákazník</label>
                            <select ng-if="(eventMode != 'S')" name="customer" id="customer" class="form-control tiny-form-control" style="padding-top: 2px;" ng-model='currentEvent.customer' ng-options='customer.name for customer in initData.customers track by customer.id' ng-change="customerChanged()"></select>
                            <input ng-if="(eventMode == 'S')" type="text" name="customer" id="customer" class="form-control tiny-form-control" ng-model='currentEvent.customer.name' readonly>
                        </div>
                        <div class="form-group col-12">
                            <label for="customerName" class="control-label" title="Jméno zákazníka">Jméno zákazníka</label>
                            <input type="text" name="customerName" id="customerName" class="form-control tiny-form-control" ng-model='currentEvent.customerName'>
                        </div>
                        <div class="form-group col-12">
                            <label for="customerEmail" class="control-label" title="Email zákazníka">Email zákazníka</label>
                            <input type="text" name="customerEmail" id="customerEmail" class="form-control tiny-form-control" ng-model='currentEvent.customerEmail'>
                        </div>
                        <div class="form-group col-12">
                            <label for="customerPhoneNumber" class="control-label" title="Tel. číslo zákazníka">Tel. číslo zákazníka</label>
                            <input type="text" name="customerPhoneNumber" id="customerPhoneNumber" class="form-control tiny-form-control" ng-model='currentEvent.customerPhoneNumber'>
                        </div>
                        <div class="form-group form-check col-6">
                            <label for="sendEmail" class="control-label" style="width: 150px; margin-bottom: 0px;" title="Odeslat Email">Poslat Email</label>
                            <input type='checkbox' name="sendEmail" id="sendEmail" class="form-control tiny-form-control" ng-model="currentEvent.sendEmail" title="Odeslat Email" style="width: 20px;" />
                        </div>
                        <div class="form-group form-check col-6">
                            <label for="sendSms" class="control-label" style="width: 150px; margin-bottom: 0px;" title="Odeslat SMS">Poslat SMS</label>
                            <input type='checkbox' name="sendSms" id="sendSms" class="form-control tiny-form-control" ng-model="currentEvent.sendSms" title="Odeslat SMS" style="width: 20px;" />
                        </div>
                        <div class="form-group col-12">
                            <label for="note" class="control-label">Poznámka</label>
                            <textarea name="note" id="note" class="form-control tiny-form-control" rows="2" cols="50" ng-model='currentEvent.note'></textarea>
                        </div>
<!--
                        <div class="form-group">
                            <button type="submit" class="clickable calendar-save-event calendar-button" style="margin: 5px 0 5px 15px;" ng-click="$event.preventDefault();saveEvent()">Uložit</button>
                        </div>
-->
                    </form>
                </div>
            </div>
            <div class="col-9 calendar-field-div">
                <div class="row calendar-field" style="height: 25px; margin-bottom: 1px;">
                    <div ng-if="interval == 'D'" class="col-1">
                    </div>
                    <div ng-if="interval == 'D'" class="col-11">
                        <div class="row" style="height: 100%;">
                            <div class="bordered single-day"><span style="font-size: 14px;">{{selectedDay.day}}.{{selectedDay.month}}.{{selectedDay.year}}</span></div>
                        </div>
                    </div>
                    <div ng-if="interval == 'W'" class="col-1">
                    </div>
                    <div ng-if="interval == 'W'" class="col-11">
                        <div class="row" style="height: 100%;">
                            <div ng-repeat="day in weekOfSelectedDay.days" class="bordered day-of-week" ng-class="{saturday: (day.dayOfWeek == 6), sunday: (day.dayOfWeek == 0)}">
                                <span style="font-size: 14px;">{{day.day}}.{{day.month}}.{{day.year}}</span>
                            </div>
                        </div>
                    </div>
                    <div ng-if="interval == 'M'" class="col-1">
                    </div>
                    <div ng-if="interval == 'M'" class="col-11">
                        <div class="row" style="height: 100%;">
                            <div ng-repeat="day in monthOfSelectedDay.days" class="bordered day-of-month" ng-class="{saturday: (day.dayOfWeek == 6), sunday: (day.dayOfWeek == 0)}">
                                <span style="font-size: 14px;">{{day.day}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row calendar-field-common" style="height: 25px; margin-bottom: 1px;">
                    <div class="col-1"></div>
                    <div ng-if="interval == 'D'" class="col-11 no-padding">
                        <div class="bordered clickable" style="width: 100%; height: 100%;" ng-click="addAllDayEvent()">
                        </div>
                    </div>
                    <div ng-if="interval == 'W'" class="col-11 no-padding">
                        <div class="bordered clickable" style="width: {{(13.0952*7)}}%; height: 100%;" ng-click="addAllWeekEvent()">
                        </div>
                    </div>
                    <div ng-if="interval == 'M'" class="col-11 no-padding">
                        <div class="bordered clickable" style="width: {{(3.0516*monthDays)}}%; height: 100%;" ng-click="addAllMonthEvent()">
                        </div>
                    </div>
                </div>
                <div class="row calendar-field" style="height: 960px;">
                    <div class="col-1 timing-col">
                        <div ng-repeat="n in range(1, 15)" class="row timing-row bordered">
                            <span class="timing-title">{{(n + 5)}}:00</span>
                        </div>
                    </div>
                    <div ng-if="interval == 'D'" class="col-11 no-padding">
                        <div ng-repeat="n in range(1, 30)" class="row field-row">
                            <div class="bordered clickable single-day" ng-class="{saturday: (day.dayOfWeek == 6), sunday: (day.dayOfWeek == 0)}" ng-click="addEventFromDay(n)"></div>
                        </div>
                        <div ng-repeat="event in events | filter: dayEventFilter" class="row clickable" ng-click="showEventDetail(event)" style="position: absolute; top: {{(getTopMinutes(event)+10)}}px; left: {{($index * (75 / events.length))}}%; width: 50%; height: {{(getHeightMinutes(event)+6)}}px; z-index: {{(200 + $index)}}; background-color: {{event.eventType.color}}; margin: 0; border: 1px solid black;">
                            <div class="col-12" style="padding: 5px;">
                                <table>
                                    <tr><td>{{event.owner.firstName}}&nbsp;{{event.owner.lastName}}&nbsp;-&nbsp;{{event.title}}</td></tr>
                                    <tr><td>Zákazník: {{(getCustomerName(event))}}</td></tr>
                                    <tr><td>Termín: {{("" + event.start).substring(11, 16)}}&nbsp;-&nbsp;{{("" + event.end).substring(11, 16)}}</td></tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div ng-if="interval == 'W'" class="col-11 no-padding">
                        <div ng-repeat="n in range(1, 30)" class="row field-row">
                            <div ng-repeat="(dayIndex, day) in weekOfSelectedDay.days" class="bordered clickable day-of-week" ng-class="{saturday: (day.dayOfWeek == 6), sunday: (day.dayOfWeek == 0)}" ng-click="addEventFromWeek(day, n)">
                                <div ng-repeat="(eventIndex, event) in events | filter: weekEventFilter" class="row clickable" ng-click="showEventDetail(event)" style="position: absolute; top: {{(getTopMinutes(event)+10)}}px; left: {{((dayIndex * 14.2857) + 14.2857*(7 / events.length))}}%; width: 7%; height: {{(getHeightMinutes(event)+6)}}px; z-index: {{(200 + $index)}}; background-color: {{event.event.color}}; margin: 0; border: 1px solid black;">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div ng-if="interval == 'M'" class="col-11 no-padding">
                        <div ng-repeat="n in range(1, 30)" class="row field-row">
                            <div ng-repeat="day in monthOfSelectedDay.days" class="bordered clickable day-of-month" ng-class="{saturday: (day.dayOfWeek == 6), sunday: (day.dayOfWeek == 0)}" ng-click="addEventFromMonth(day, n)"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

