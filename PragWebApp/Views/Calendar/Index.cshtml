@{
    Layout = "~/Views/Shared/_LayoutCalendar.cshtml";
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/js/angular-1.5.3.min.js" type="text/javascript"></script>
<script src="~/js/angular-messages.js" type="text/javascript"></script>
<script src="~/js/common.js" type="text/javascript"></script>
<script src="~/js/calendar-page.js" type="text/javascript"></script>

<link href="~/css/calendar-page.css" type="text/css" rel="stylesheet">

<div id="calendar-app-div" ng-app="CalendarPage">

    <div id="controller-div" ng-controller="CalendarCtrl">

        <div class="row calendar-selector">
            <div class="col-3">
                <div class="row" style="margin-bottom: 1px;">
                    <div class="month-change" ng-click="prevMonth()"><span>&lt;</span></div>
                    <div class="month-current">{{initData.monthName}}  {{initData.year}}</div>
                    <div class="month-change" ng-click="nextMonth()"><span>&gt;</span></div>
                </div>
                <div class="row" style="margin-bottom: 1px;">
                    <div class="calendar-day-title">PO</div>
                    <div class="calendar-day-title">ÚT</div>
                    <div class="calendar-day-title">ST</div>
                    <div class="calendar-day-title">ČT</div>
                    <div class="calendar-day-title">PÁ</div>
                    <div class="calendar-day-title">SO</div>
                    <div class="calendar-day-title">NE</div>
                </div>
                <div ng-repeat="row in selectorRows" class="row">
                    <div ng-repeat="day in row.days" ng-click="selectDay(day)" class="calendar-day" ng-class="{inmonth: (day.isInMonth == true), today: (day.isCurrentDay == true), selectedday: (day.isSelected == true)}">
                        <span>{{day.day}}</span>
                    </div>
                </div>
            </div>
            <div class="col-9">
            </div>
        </div>

    </div>

</div>

