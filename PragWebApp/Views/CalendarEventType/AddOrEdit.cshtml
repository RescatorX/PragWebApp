@model PragWebApp.Data.Entities.CalendarEventType

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "AddOrEdit";
}

<div style="margin-top: 50px;"></div>

@if (Model.Id == Guid.Empty)
{
    <h4>Nová akce</h4>
}
else
{
    <h4>Změna akce</h4>
}

<hr />
<div class="row">
    <div class="col-md-4" style="height: 100%;">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.Id == Guid.Empty)
                {
                    <input type="submit" value="Vytvořit" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Změnit" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa fa-list" title="Zobrazit seznam akc9" style="padding: 0 5px;"></i></a>
</div>

